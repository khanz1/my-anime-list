<%- include("../partials/header") %>
    <%- include("../partials/navbar", isLogin = false) %>

        <div class="container" style="background-color: rgb(202, 197, 197); width: 50%; padding: 50px; height: 50%; border-radius: 10px;">
            <form action="/register" method="POST">
              <% if(errors) { %> <%- include("../partials/errors", { errors }) %> <% } %>
                <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                  <label for="image" class="form-label">Image(link)</label>
                  <input type="text" class="form-control" id="image" name="image">
                </div>
                <div class="mb-3">
                  <label for="restriction" class="form-label">Restriction</label>
                  <input type="number" class="form-control" id="restriction" name="restriction">
                </div>
                <div class="mb-3">
                  <label for="released_year" class="form-label">Released Year</label>
                  <input type="number" class="form-control" id="released_year" name="released_year">
                </div>
                <div class="mb-3">
                  <label for="questionId" class="form-label">Question</label>
                  <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="questionId" name="questionId">
                    <option selected value="1">apa warna favorit kamu?</option>
                    <option value="2">siapa nama guru sd kamu?</option>
                    <option value="3">apa nama hewan peliharaan kamu?</option>
                    <option value="4">kapan nikah?</option>
                    <option value="5">siapa penyemangat kamu?</option>
                    <option value="6">siapa mantan kamu?</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="hint" class="form-label">Hint</label>
                  <input type="text" class="form-control" id="hint" name="hint">
                </div>
                <div class="mb-3">
                  <label for="roleId" class="form-label">Role</label>
                  <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="roleId" name="roleId">
                    <option selected value="3">User</option>
                    <option value="2">Staff</option>
                    <option value="1">Master</option>
                  </select>
                </div>
                <div style="display: flex; justify-content: flex-end;">
                  <a href="/login" style="text-decoration: none;">have an account?</a>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
                <a href="/"><button type="button" class="btn btn-primary">Cancel</button></a>
              </form>
        </div>

<%- include("../partials/footer") %>