<%- include("../partials/header") %>
    <%- include("../partials/navbar") %>
      <h2 style="display: flex; justify-content: center;">edit anime : dr stone</h2>
      <div class="container" style="background-color: rgb(202, 197, 197); width: 50rem; padding: 20px; border-radius: 5px;">
          <form action="/login" method="GET">
            <div class="mb-3">
              <label for="title" class="form-label">title</label>
              <input type="text" class="form-control" id="title" aria-describedby="emailHelp" name="title">
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">image</label>
              <input type="text" class="form-control" id="image" name="image">
            </div>
            <div class="mb-3">
              <label for="restriction" class="form-label">restriction in year</label>
              <input type="number" class="form-control" id="restriction" name="restriction">
            </div>
            <div class="mb-3">
              <label for="type" class="form-label">type</label>
              <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="type" name="type">
                <option selected value="Serial TV">Serial TV</option>
                <option value="Movie">Movie</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="writer" class="form-label">writer</label>
              <input type="text" class="form-control" id="writer" name="writer">
            </div>
            <div class="mb-3">
              <label for="genre" class="form-label">genre</label>
              <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="genre" name="genre">
                <option selected>pake foreach</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="genre" class="form-label">synopsis</label>
              <textarea class="form-control" rows="6"></textarea>
            </div>  
            <button type="submit" class="btn btn-primary">Edit</button>
            <a href="/anime-list"><button type="button" class="btn btn-primary">Cancel</button></a>
          </form>
      </div>

<%- include("../partials/footer") %>